<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".activity_mymusic_player">


    <ImageView
        android:id="@+id/music_ico"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:src="@drawable/musicway"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/song_name_tv_mymusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Om Namah Shivaya Har Har"
        android:layout_below="@id/music_ico"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/artist_name_tv_mymusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anuradha"
        android:layout_below="@id/song_name_tv_mymusic"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:fontFamily="@font/font_res"
        />



    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_name_tv_mymusic"
        android:layout_marginTop="40dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekbar_music"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mymusic_list_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_music_list_24"


            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mymusic_prev_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/skip_previou_button"


            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mymusic_play_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_play_arrow_24"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mymusic_next_btn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/skip_next_button"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mymusic_add_list"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_music_playlist_add_24"

            />





    </LinearLayout>



</RelativeLayout>