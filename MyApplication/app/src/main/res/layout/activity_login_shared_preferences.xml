<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_login_shared_preferences">


    <ImageView
        android:id="@+id/shared_preference_logo_login"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/android" />


    <TextView
        android:id="@+id/shared_preference_login_txt"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shared_preference_logo_login"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LOGIN"
        android:textSize="50sp"
        android:textColor="#F800BCD4"
        android:textStyle="bold"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="#1E00BCD4"
        android:layout_marginTop="200dp"
        >






        <EditText
            android:id="@+id/shared_preference_user_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="USER NAME"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/shared_preference_pass_edt"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shared_preference_user_name_edt"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="PASSWORD"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shared_preference_login_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shared_preference_pass_edt"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bmi_btn"
            android:gravity="center"
            android:text="login"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/shared_preference_login_btn"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            >


        </LinearLayout>





    </RelativeLayout>












</RelativeLayout>