<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/reltive1"
    android:background="@color/white"
    tools:context=".activity_singup_bmi">

    <ImageView
        android:id="@+id/bmi_logo_singup"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/bmi_img" />


    <TextView
        android:id="@+id/singup_txt"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bmi_logo_singup"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SING UP"
        android:textSize="50sp"
        android:textColor="#F800BCD4"
        android:textStyle="bold"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:background="#1E00BCD4"
        android:layout_marginTop="200dp"
        >






        <EditText
            android:id="@+id/first_name_singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="FIRST NAME"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/surname_singup"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name_singup"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="SURNAME"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/bmi_email_singup"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/surname_singup"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="EMAIL"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/bmi_pass_singup"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmi_email_singup"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="NEW PASSWORD"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/singu_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmi_pass_singup"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:background="@drawable/bmi_btn"
            android:gravity="center"
            android:text="sing up"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/singu_btn"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            >


            <TextView
                android:id="@+id/alreday_acc_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALREADY HAVE AN ACCOUNT ?"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:textColor="#BE00BCD4"
                android:layout_margin="10dp"
                />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_login"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/bmi_btn"
                android:gravity="center"
                android:padding="5dp"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="20sp" />




        </LinearLayout>





    </RelativeLayout>



</RelativeLayout>