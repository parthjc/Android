<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_shared_preference">

    <ImageView
        android:id="@+id/shared_preference_logo_singup"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/android" />


    <TextView
        android:id="@+id/shared_preference_singup_txt"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shared_preference_logo_singup"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SING UP"
        android:textSize="50sp"
        android:textColor="#F800BCD4"
        android:textStyle="bold"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:background="#1E00BCD4"
        android:layout_marginTop="200dp"
        >






        <EditText
            android:id="@+id/shared_preference_first_name_singup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="FIRST NAME"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/shared_preference_surname_singup"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shared_preference_first_name_singup"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="SURNAME"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/shared_preference_email_singup"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shared_preference_surname_singup"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="EMAIL"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/shared_preference_pass_singup"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shared_preference_email_singup"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="NEW PASSWORD"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />


        <LinearLayout
            android:id="@+id/singu_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/shared_preference_pass_singup"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shared_preference_btn_save"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/shared_preference_pass_singup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bmi_btn"
                android:gravity="center"
                android:text="save"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shared_preference_btn_show"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/shared_preference_pass_singup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bmi_btn"
                android:gravity="center"
                android:text="show"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shared_preference_btn_delete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/shared_preference_pass_singup"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bmi_btn"
                android:gravity="center"
                android:text="delete"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>






    </RelativeLayout>














</RelativeLayout>