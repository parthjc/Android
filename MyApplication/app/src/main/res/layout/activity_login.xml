<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/reltive1"
    android:background="@color/white"
    tools:context=".activity_login">

    <ImageView
        android:id="@+id/bmi_logo_login"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:foregroundGravity="center"
        android:src="@drawable/bmi_img" />


    <TextView
        android:id="@+id/login_txt"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bmi_logo_login"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LOGIN"
        android:textSize="50sp"
        android:textColor="#F800BCD4"
        android:textStyle="bold"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="#1E00BCD4"
        android:layout_marginTop="200dp"
        >






        <EditText
            android:id="@+id/user_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="USER NAME"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <EditText
            android:id="@+id/pass_edt"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_edt"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/bmi_btn"
            android:padding="10dp"
            android:hint="PASSWORD"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:textSize="20sp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass_edt"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bmi_btn"
            android:gravity="center"
            android:text="login"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/login_btn"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            >


            <TextView
                android:id="@+id/alreday_acc_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I DONT'T HAVE AN ACCOUNT YET ?"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:textColor="#BE00BCD4"
                android:layout_margin="10dp"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/not_create_Acc"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@drawable/bmi_btn"
                android:gravity="center"
                android:padding="5dp"
                android:text="signup"
                android:textColor="@color/white"
                android:textSize="20sp" />




        </LinearLayout>





    </RelativeLayout>



</RelativeLayout>