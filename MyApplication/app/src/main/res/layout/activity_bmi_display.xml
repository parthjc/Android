<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity_bmi_display">


    <TextView
        android:id="@+id/bmi2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:background="@drawable/bmi_btn"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:padding="2dp"
        />

    <TextView
        android:id="@+id/calculator_bmi2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CALCULATOR"
        android:layout_gravity="center"
        android:background="@drawable/bmi_weight"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="2dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_bmi2"
                android:layout_width="150dp"
                android:layout_height="400dp"
                android:src="@drawable/bmi_img"
                android:layout_margin="10dp"
                android:padding="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:gravity="center"
                android:padding="10dp"
                >


                <TextView
                    android:id="@+id/answer_bmi2"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:background="@drawable/bmi_weight"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:hint="ANSWER"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />



            </RelativeLayout>



        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/back_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:background="@drawable/bmi_btn"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="15dp"


            />







    </LinearLayout>









</LinearLayout>